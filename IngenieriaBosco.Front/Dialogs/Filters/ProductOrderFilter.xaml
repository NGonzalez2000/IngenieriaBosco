<UserControl x:Class="IngenieriaBosco.Front.Dialogs.Filters.ProductOrderFilter"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IngenieriaBosco.Front.Dialogs.Filters" xmlns:textboxs="clr-namespace:IngenieriaBosco.Front.Controls.TextBoxs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UniformGrid Columns="2">
        <textboxs:IntTextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint ="N°"
            BindingPath="Number"
            CharacterCasing="Upper"
            MinWidth="150"
            MaxWidth="150"
            Margin="15"/>

        <TextBox
            VerticalAlignment="Top"
            materialDesign:HintAssist.Hint ="Proveedor"
            Text="{Binding Path=ProviderName}"
            Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
            CharacterCasing="Upper"
            MinWidth="150"
            MaxWidth="150"
            Margin="15"/>
        


    </UniformGrid>
</UserControl>
