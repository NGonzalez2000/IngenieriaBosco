            </UniformGrid>

            <StackPanel
                Grid.Row="1"
                Margin="0 30">
                <Separator
                    Height="2"
                    Background="{DynamicResource PrimaryHueDarkBrush}"/>
                <ListView
                    ItemsSource="{Binding Path=Orders.Collection}"
                    SelectedItem="{Binding Path=Orders.SelectedItem}">
                    <ListView.View>
                        <GridView>

                            <GridViewColumn
                                Header="Nº">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Path=Id}"
                                            FontSize="{DynamicResource GridFontSize}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="Proveedor">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Path=Provider.Name}"
                                            FontSize="{DynamicResource GridFontSize}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="Fecha">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Path=Date}"
                                            FontSize="{DynamicResource GridFontSize}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="Importe Pesos">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Path=ARGPrice,Converter={StaticResource MoneyConverter}}"
                                            FontSize="{DynamicResource GridFontSize}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn
                                Header="Importe Dolares">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            Text="{Binding Path=USDPrice,Converter={StaticResource MoneyConverter}}"
                                            FontSize="{DynamicResource GridFontSize}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            

                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>
